{
	"name": "minipack_ts",
	"version": "0.0.2",
	"description": "A VERY basic TypeScript bundler that doesn't compile to JS",
	"keywords": [
		"typescript",
		"bundler",
		"codingame"
	],
	"author": "Zweih√§nder",
	"main": "index.js",
	"license": "MIT",
	"main": "index.js",
	"bugs": {
		"url": "https://github.com/Zweihander-Main/minipack_ts/issues"
	},
	"repository": {
		"type": "git",
		"url": "git@github.com:Zweihander-Main/minipack_ts.git"
	},
	"scripts": {
		"test": "jest",
		"testWatch": "jest --watch"
	},
	"jest": {
		"transform": {
			"^.+\\.jsx?$": "babel-jest"
		},
		"coverageDirectory": "coverage",
		"roots": [
			"<rootDir>/src/"
		],
		"testEnvironment": "node",
		"moduleNameMapper": {
			"^.+\\.hbs$": "<rootDir>/src/__mocks__/hbsMock.js"
		},
		"preset": "ts-jest"
	},
	"eslintConfig": {
		"env": {
			"node": true,
			"es6": true
		},
		"parserOptions": {
			"ecmaVersion": 2019,
			"sourceType": "module"
		},
		"plugins": [
			"jest"
		],
		"rules": {
			"quotes": [
				"error",
				"single"
			],
			"semi": [
				"error",
				"always"
			],
			"no-console": "off",
			"no-mixed-spaces-and-tabs": [
				"error",
				"smart-tabs"
			]
		}
	},
	"prettier": {
		"singleQuote": true,
		"trailingComma": "es5",
		"tabWidth": 4,
		"useTabs": true,
		"arrowParens": "always"
	},
	"browserslist": [
		"maintained node versions",
		"> 0.2%",
		"last 2 versions",
		"Firefox ESR",
		"not dead"
	],
	"babel": {
		"presets": [
			"@babel/preset-env"
		]
	},
	"dependencies": {
		"@typescript-eslint/typescript-estree": "^2.5.0",
		"babel-traverse": "^6.26.0",
		"typescript": "^3.6.4"
	},
	"devDependencies": {
		"@babel/core": "^7.4.3",
		"@babel/preset-env": "^7.4.3",
		"@babel/register": "^7.4.0",
		"@types/jest": "^24.0.19",
		"babel-jest": "^24.7.1",
		"eslint": "^5.16.0",
		"eslint-config-prettier": "^4.1.0",
		"eslint-plugin-jest": "^22.4.1",
		"eslint-plugin-prettier": "^3.0.1",
		"jest": "^24.7.1",
		"jest-mock-console": "^0.4.2",
		"prettier": "^1.17.0",
		"ts-jest": "^24.1.0"
	}
}
