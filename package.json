{
	"name": "minipack_ts",
	"version": "0.3.2",
	"description": "A VERY basic TypeScript bundler that doesn't compile to JS",
	"keywords": [
		"typescript",
		"bundler",
		"codingame"
	],
	"author": "Zweih√§nder",
	"main": "index.js",
	"license": "MIT",
	"bugs": {
		"url": "https://github.com/Zweihander-Main/minipack_ts/issues"
	},
	"repository": {
		"type": "git",
		"url": "git@github.com:Zweihander-Main/minipack_ts.git"
	},
	"scripts": {
		"build": "babel ./src/minipack.js --out-dir build",
		"test": "jest",
		"testWatch": "jest --watch"
	},
	"jest": {
		"transform": {
			"^.+\\.jsx?$": "babel-jest"
		},
		"coverageDirectory": "coverage",
		"roots": [
			"<rootDir>/src/"
		],
		"testEnvironment": "node",
		"moduleNameMapper": {
			"^.+\\.hbs$": "<rootDir>/src/__mocks__/hbsMock.js"
		},
		"preset": "ts-jest"
	},
	"eslintConfig": {
		"env": {
			"node": true,
			"es6": true
		},
		"parserOptions": {
			"ecmaVersion": 2019,
			"sourceType": "module"
		},
		"plugins": [
			"jest"
		],
		"rules": {
			"quotes": [
				"error",
				"single"
			],
			"semi": [
				"error",
				"always"
			],
			"no-console": "off",
			"no-mixed-spaces-and-tabs": [
				"error",
				"smart-tabs"
			]
		}
	},
	"prettier": {
		"singleQuote": true,
		"trailingComma": "es5",
		"tabWidth": 4,
		"useTabs": true,
		"arrowParens": "always"
	},
	"browserslist": [
		"maintained node versions"
	],
	"babel": {
		"presets": [
			"@babel/preset-env"
		]
	},
	"dependencies": {
		"@typescript-eslint/typescript-estree": "^2.5.0",
		"node-source-walk": "^4.2.0",
		"typescript": "^3.6.4"
	},
	"devDependencies": {
		"@babel/cli": "^7.6.4",
		"@babel/core": "^7.6.4",
		"@babel/preset-env": "^7.6.3",
		"@babel/register": "^7.6.2",
		"@types/jest": "^24.0.19",
		"babel-jest": "^24.9.0",
		"eslint": "^6.5.1",
		"eslint-config-prettier": "^6.4.0",
		"eslint-plugin-jest": "^22.20.0",
		"eslint-plugin-prettier": "^3.1.1",
		"jest": "^24.9.0",
		"jest-mock-console": "^1.0.0",
		"prettier": "^1.18.2",
		"ts-jest": "^24.1.0"
	}
}
